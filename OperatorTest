fun solve(meal_cost: Double, tip_percent: Int, tax_percent:Int): Unit {
   un solve(meal_cost: Double, tip_percent: Int, tax_percent: Int): Unit {
   var tip_percent_pay = ((tip_percent * meal_cost) /100)
   var tax_percent_payable = ((tax_percent * meal_cost) / 100)
   val total_payment = (meal_cost + tip_percent_pay + tax_percent_payable)
val y = total_payment.roundToInt()
print ("$y")
}

